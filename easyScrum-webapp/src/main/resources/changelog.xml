        <createIndex tableName="SPRINT_DAY" indexName="IDX_SPRINT_DAY_DAY" unique="false">
            <column name="sprint_day" />
        </createIndex>
        <createIndex tableName="SPRINT" indexName="IDX_SPRINT_END_DAY" unique="false">
            <column name="end_date" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
